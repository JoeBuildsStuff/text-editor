# Better Auth requires a secret for hashing + encryption.
BETTER_AUTH_SECRET=replace-me-with-a-long-random-string

# Base URL for the Better Auth instance (also exposed to the client so auth links work).
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# Paths for the local SQLite databases (override if you store them elsewhere).
AUTH_SQLITE_PATH=./server/auth.sqlite
DOCUMENTS_SQLITE_PATH=./server/documents.db
